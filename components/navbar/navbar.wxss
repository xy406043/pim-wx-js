/* components/navbar/navbar.wxss */
.nav-bar {
    width: 100%;
    height: 44px;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    box-sizing: content-box;
  }
  
  .left {
    height: inherit;
    position: absolute;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
  }
  
  .left-icon {
    width: 44rpx;
    height: 44rpx;
  }
  
  .left-home {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 78rpx;
    height: 62rpx;
    border-radius: 34rpx;
    border: 1rpx solid rgba(239, 239, 239, 1);
  }
  
  .left-home-icon {
    width: 36rpx;
    height: 36rpx;
  }
  
  .nav-title {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    margin: 0 auto;
    font-size: 34rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color:green;
  }
  
  .one-row-word {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
  }